@using MudBlazor
@using Rapido.Web.UI.Shared.Layout
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                @{
                    NavigationManager.NavigateTo("/log-in");
                }
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <MudContainer>
                <MudGrid>
                    <MudItem xs="12" Style="margin-top: 20%">
                        <MudGrid Spacing="1" Justify="Justify.Center">
                            <MudItem>
                                <MudText Typo="Typo.h4"><i>Sorry, there's nothing at this address.</i></MudText>
                            </MudItem>
                        </MudGrid>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </LayoutView>
    </NotFound>
</Router>
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>